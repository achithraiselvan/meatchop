<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/fieldseperator_color"
    android:orientation="vertical">

    <com.meatchop.widget.TMCTextView
        android:id="@+id/stepno_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:text="STEP 1"
        android:textSize="12sp"
        android:textColor="@color/primary_text_color"
        app:customTextViewFont="@string/font_open_sans_semibold"/>

    <com.meatchop.widget.TMCTextView
        android:id="@+id/recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:text="Soak Rice for 30 mins"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:customTextViewFont="@string/font_open_sans_bold"/>


    <com.meatchop.widget.TMCTextView
        android:id="@+id/recipe_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="false"
        android:text="In a small bowl, combine the garlic, mustard, herbs, salt, pepper, olive oil and lemon juice"
        android:textSize="12sp"
        android:textColor="@color/primary_text_color"
        app:customTextViewFont="@string/font_open_sans_semibold"/>




</LinearLayout>