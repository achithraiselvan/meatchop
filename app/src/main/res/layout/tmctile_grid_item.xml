<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/tmctile_imagelayout"
        android:layout_width="200dp"
        app:cardUseCompatPadding="false"
        android:adjustViewBounds="true"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tmctile_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tmctile_progressbar"
        android:layout_width="200dp"
        app:cardUseCompatPadding="false"
        android:adjustViewBounds="true"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="10dp"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/progress_animation"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <com.meatchop.widget.TMCTextView
        android:id="@+id/tmctile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tmctile_imagelayout"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="#2a3132"
        app:customTextViewFont="@string/font_open_sans_bold"/>
</RelativeLayout>
