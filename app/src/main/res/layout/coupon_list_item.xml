<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/swipelist_frontview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/coupon_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.meatchop.widget.TMCTextView
                        android:id="@+id/couponheader_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        app:customTextViewFont="@string/font_open_sans_semibold"
                        android:textColor="@color/primary_text_color"
                        android:text="BIG25"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <com.meatchop.widget.TMCTextView
                        android:id="@+id/coupontitle_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        app:customTextViewFont="@string/font_open_sans_semibold"
                        android:textColor="@color/primary_text_color"
                        android:text="25% off on orders above Rs.99"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/couponsubtitle_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <com.meatchop.widget.TMCTextView
                        android:id="@+id/couponsubtitle_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        app:customTextViewFont="@string/font_open_sans_semibold"
                        android:textColor="@color/secondary_text_color"
                        android:text="25% off on orders above Rs.99. Max Discount - Rs.75."/>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/applycoupon_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">

                    <com.meatchop.widget.TMCTextView
                        android:id="@+id/applybutton_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        app:customTextViewFont="@string/font_open_sans_semibold"
                        android:textColor="@color/meatchopbg_red"
                        android:text="APPLY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/couponapplied_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">

                    <com.meatchop.widget.TMCTextView
                        android:id="@+id/couponapplied_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        app:customTextViewFont="@string/font_open_sans_semibold"
                        android:textColor="@color/secondary_text_color"
                        android:text="Availed" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/coupon_divider"
            android:layout_below="@+id/coupon_list_item"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/pastordersseperator_color" />
    </RelativeLayout>



</FrameLayout> <!-- $Id$ -->
