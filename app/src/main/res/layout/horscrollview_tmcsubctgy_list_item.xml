<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tmcsubctgyborder_layout"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@drawable/tmcsubctgy_border"
        android:orientation="vertical">

        <com.meatchop.widget.TMCTextView
            android:id="@+id/tmcsubctgyname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Meal Kit - Mutton"
            android:textSize="13sp"
            android:textColor="@color/primary_text_color"
            app:customTextViewFont="@string/font_open_sans_bold"/>
    </LinearLayout>


</LinearLayout>